<div id="top_wrapper">
  <div class="top_img top_img__login"></div>
  <div class="top_section">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path, local: true, class: "account_form" do |f| %>
      <div class="post_control">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="post_control">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="post_control">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn__login" %>
      </div>
    <% end %>
    <div class="post_control">
      <p>会員登録がお済でない方</p>
      <%= render "user/devise/shared/links" %>
    </div>
  </div>
</div>
