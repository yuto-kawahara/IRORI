<li class="item notice">
  <div class="notice__head">
    <% visitor = notification.visitor %>
    <%= link_to profile_user_path(visitor) do %>
      <%= attachment_image_tag visitor, :icon_image, :fill, 40, 40, fallback: "no-icon.png", size:"40x40", class: "face_icon" %>
    <% end %>
    <span class="notice__form">
      <%= notification_form(notification) %>
      <small><%= " (#{time_ago_in_words(notification.created_at)}前)" %></small>
    </span>
  </div>
  <% if !@comment.nil? %>
    <p class="notice__comment"><%= @comment %></p>
  <% end %>
</li>
