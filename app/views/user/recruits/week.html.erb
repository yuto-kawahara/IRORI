<div id="wrapper">
  <div class="head_link">
    <h2 class="head_link__title">募集</h2>
  </div>
  <%= render 'user/recruits/calendar_tab' %>
  <div class="area area__recruit_calendar">
    <%= week_calendar events: @recruits do |date, recruits| %>
      <div  class="event_count">
        <% unless recruits.blank? %>
          <ul>
            <% recruits.each do |recruit|%>
              <li class="item">
                <%= render 'user/recruits/status', recruit: recruit %>
                <%= link_to recruit_path(recruit) do %>
                  <%= "#{recruit.start_time.strftime("%H:%M")}～" %>
                  <%= recruit.title %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
