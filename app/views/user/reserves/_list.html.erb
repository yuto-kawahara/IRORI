<% reserves.each do |reserve| %>
  <% user = reserve.user %>
  <% status = reserve.reserve_status %>
  <%= attachment_image_tag user, :icon_image, :fill, 40, 40, fallback: "no-icon.png", size:"40x40", class: "face_icon"  %>
  <%= user.nickname %>
  <% case status
       when "approve_reserve" %>
      <%= render 'user/reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "active", red_active: "no_active" %>
    <% when "reject_reserve" %>
      <%= render 'user/reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "no_active", red_active: "active" %>
    <% else %>
      <%= render 'user/reserves/confirm_btn', reserve: reserve, recruit: recruit, green_active: "no_active", red_active: "no_active" %>
  <% end %>
<% end %>