<% if recruit.reserve_exist?(current_user) %>
  <%= link_to recruit_reserves_path(@recruit), method: :delete, remote: true, class: "btn btn__cancel" do %>
    <i class="far fa-times-circle">キャンセル</i>
  <% end %>
<% else %>
  <%= link_to recruit_reserves_path(@recruit), method: :post, remote: true, class: "btn btn__reserve" do %>
    <i class="far fa-clock">予約する</i>
  <% end %>
<% end %>