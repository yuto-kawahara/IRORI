<div id="wrapper">
  <div class="head_link">
    <span class="head_link__inner">
      <%= link_to profile_user_path(current_user), class: "btn btn__back" do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>
      <h2 class="head_link__title"><%= current_user.nickname %></h2>
    </span>
  </div>
  <ul class="tab">
    <li class="tab__item">
      <%= link_to followings_user_path, class: "tab__link" do %>
        フォロー中
      <% end %>
    </li>
    <li class="tab__item">
      <%= link_to followers_user_path, class: "tab__link" do %>
        フォロワー
      <% end %>
    </li>
  </ul>
  <div class="area area__follow">
    <div class="tab_content">
      <%= render 'index', users: @users, follow: "誰もフォローしていません"  %>
    </div>
  </div>
</div>